extends layout

block content
    include nav.pug
    include footer.pug
    section#content
        h2 Dashboard
        p Welcome to #{user.firstName} #{user.lastName}

        form(id="idSubmit" action='/users/post' method='post')
            textarea(type="text" name="text" placeholder="What is happening?" maxlength="167")
            input(type="text" name="tag" placeholder="Tags")
            div
                img(id="output")
            div.row
                label(class="custom-file-upload")
                    input(id="input" type="file" name="picture" accept=".gif, .png, .jpg, .jpeg")
                    i(class="fas fa-camera")
                input(type='submit' value='Yabba')

        div#posts
            each post in posts
                div.post
                    div.row
                        div.row
                            div.profileImage
                                img(class=`avatar${post.username}` src="images/placeholder.jpeg")
                            div
                                div
                                    p= post.username
                                div
                                    label(id=`created${post._id}`)= post.created
                        div
                            if user.username === post.username
                                form(class="postdel" action="/users/delPost" method="post")
                                    input(type="hidden" name="_id" value=`${post._id}`)
                                    button(type="submit") 
                                        i(class="fas fa-trash-alt")
                    div.postText
                            h3= post.text
                    if post.picture != "none"
                        div.postImage
                                img(src=`${post.picture}` alt="test")
                    div.postReplies
                        div(style="width:20%;")
                            p 0 Comments
                        div(style="width:80%;")
                            p(id=`writeComments${post._id}`) Write comment
                            div.comment
                                div.profileImage
                                    img(class=`avatar${post.username}` src="images/placeholder.jpeg")
                                form(action="postReply" method="post")
                                        textarea(type="text" name="text" placeholder="What is happening?" maxlength="167")
                                        input(type="text" name="tag" placeholder="Tags")
                                        input(type="hidden" name="tag" value=`${post._id}`)
                                        input(type="submit" value="Send")
